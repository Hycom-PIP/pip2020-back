pipeline {
    agent any
    stages {
      stage('Build') {
                steps {
                    sh 'mvn clean install -DskipTests'
                }
            }
      stage('Run') {
         steps {
             parallel (
                "stream 1": {
                     sh 'java -jar -Dspring.profiles.active=fullTests api/target/api.jar'
                },
                 "stream 2" : {
                                   sh 'sleep 10s'
                                   dir('integration-tests') {
                                        sh 'mvn test -PfullTests'
                                    }
                                    sh 'mvn spring-boot:stop'
                 }
             )
         }
      }
    }
}
